  "exercises": [
    {
      "type": "Gap Fill",
      "instructions": "Complete the sentences with the correct form of the word in brackets.",
      "questions": [
        {
          "sentence": "Researchers must _____ (analysis) the data before drawing conclusions.",
          "answer": "analyze/analyse",
          "explanation": "Need the verb form"
        },
        {
          "sentence": "Technology has had a _____ (significance) impact on education.",
          "answer": "significant",
          "explanation": "Need the adjective form to modify 'impact'"
        },
        {
          "sentence": "The _____ (sustain) of current consumption patterns is impossible.",
          "answer": "sustainability",
          "explanation": "Need the noun form as the subject"
        }
      ]
    },
